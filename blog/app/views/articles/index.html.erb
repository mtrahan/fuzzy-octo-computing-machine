<% @articles.each do |article| %>
<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h1><%= link_to article.title, article_path(article) %></h1>
        </div>

        <p class="lead">
        <%= article.text %>
        </p>
    </div>
</div>
<% end %>

<div class="row">
    <div class="col-md-12">
        &nbsp;
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <%= link_to 'New article', new_article_path, :class => 'btn btn-primary' %>
    </div>
</div>

